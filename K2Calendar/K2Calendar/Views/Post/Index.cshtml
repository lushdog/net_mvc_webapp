<ul class="pager">
    @if (ViewBag.PageNum > 1)
    {
        <li>
            @Html.ActionLink("Previous", "Details", new { pageNumber = ViewBag.PageNum - 1 })
        </li>
    }
    @if (ViewBag.PageNum < ViewBag.NumPages)
    {
        <li>
            @Html.ActionLink("Next", "Details", new { pageNumber = ViewBag.PageNum + 1 })
        </li>
    }
</ul>
