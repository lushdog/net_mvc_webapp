<div class="container">
    <div class="row">
        <div class="span8"> <!-- start body -->
        @foreach (var post in Model)
        {
            <div class="container postDetails" id="@post.Id">
                <div class="row">
                    <div class="span8">
                        <h3>@post.Title</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="span8">
                        <div id="@post.YoutubeId">
                            <div class="thumb"></div>
                            <div class="views"></div>
                        </div>
                    <div class="row">
                        <div class="span8">
                            <p>
                                <img src="@Url.Content("~/Content/images/")@post.Rank.Image" alt="@post.Rank.Name" width="70px" height="70px" />
                                <small>Posted by @post.PostedBy.FirstName @post.PostedBy.LastName and taught on @post.EventDate.ToLocalTime().ToShortDateString()
                                </small>
                            </p>
                            <script type="text/javascript" src="http://gdata.youtube.com/feeds/api/videos/@post.YoutubeId?v=2&amp;alt=json-in-script&callback=youtubeCallback" >
                            </script>
                        </div>
                        <!-- TODO:implement view count
                <div class = "span6 pull-right">
                    123456789
                </div>-->
                    </div>
                    <div class="row">
                        <div class="span8">
                            <p>@post.Description</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="span8">
                            @K2Calendar.Views.Shared.Helpers.CustomHtmlHelpers.TagsListFor(post, true, "facebook")
                        </div>
                    </div>
                </div>
                </div>
            </div>
        }
        </div>              <!-- end body -->
